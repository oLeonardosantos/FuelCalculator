<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".PriceActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_price"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/consumo"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

        <TextView
            android:id="@+id/consumoCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumo do carro"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/img_price"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"/>

        <TextView
            android:id="@+id/pass2de3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passo 2 de 3"
            android:textSize="16sp"
            android:textColor="@color/red"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/consumoCar"/>

    <Button
        android:id="@+id/btn_proximo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:backgroundTint="@color/green"
        android:hint="PrÃ³ximo"
        app:hintEnabled="false"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt_consumo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/roudend_edit_text"
        android:hint="Ex: 12 km/l"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/color_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass2de3" />

</androidx.constraintlayout.widget.ConstraintLayout>